{% extends 'home.html.twig' %}

{% block body %}
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
	{% for special in specials %}
		{% set image = special.images %}
		{% set price = special.priceSale|split('.') %}  
    <div class="item {% if loop.first %}active{% endif %}">
  	<img src="{{ asset('images/spacer.png') }}" class="spacer">
      <div class="carousel-caption">
      	<div class="special">
      		<div class="row">
      			<div class="col-sm-12">
		      		<h1 class="feature">Hot Special</h1>
      			</div>
      			<div class="col-sm-5" align="center">
      				<a href="{{ path('shop_item', {'alias':special.alias}) }}"><img src="{{ asset('images/listings/s/'~ image['0'].filename) }}" alt="{{ special.title }}" class="img-responsive"></a>
      			</div>
      			<div class="col-sm-7 left">
      				<a href="{{ path('shop_item', {'alias':special.alias}) }}"><h3>{{ special.title }}</h3></a>
      				<p class="lato light">{{ special.descriptionShort|raw }}</p>
      			</div>
      		</div>
			<div class="price">
				Now Only
				<h1>{{ price[0] }}.<sup>{{ price[1] }}</sup></h1>
			</div>
        <div>
        </div>
      	</div>
      </div>
    </div>
    {% endfor %}
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <img src="{{ asset('images/arrow-left.png') }}" aria-hidden="true" class="icon-prev">
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
    <img src="{{ asset('images/arrow-right.png') }}" aria-hidden="true" class="icon-next">
    <span class="sr-only">Next</span>
  </a>
</div>
{% endblock %}
