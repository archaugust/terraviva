<aside class="sidebar">
    <nav class="sidebar-nav">
        <ul class="metismenu cat-menu" id="cat-menu">
            {% for category in categories %}
                <li>
                    <a href="/products/{{ category.alias }}" aria-expanded="false">{{ category.name }}
                        {% if category.subcategories|length > 0 %}<span class="glyphicon arrow"></span></a>
                    <ul aria-expanded="false" class="collapse">
                        {% for subcategory in category.subcategories %}
                            <li><a href="/products/{{ category.alias }}/{{ subcategory.alias }}">{{ subcategory.name }}</a></li>
                        {% endfor %}
                    </ul>
                    {% else %}</a>{% endif %}
                </li>
            {% endfor %}
        </ul>
    </nav>
</aside>
